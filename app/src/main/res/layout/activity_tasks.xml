<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uii.Activity_tasks"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_color"
    android:gravity="bottom"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

        <EditText
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Task title"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/no_bottom_line"
            />

        <EditText
            android:id="@+id/notes_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Notes"
            android:background="@drawable/no_bottom_line"
            android:layout_marginTop="8dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/visible_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Due Date: dat"
            android:background="@drawable/no_bottom_line"
            android:layout_marginTop="8dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:id="@+id/button_when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="When?"
                    android:layout_marginLeft="30dp"/>

                <Button
                    android:id="@+id/button_who"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who?"
                    android:layout_marginLeft="30dp"
                    />

                <Button
                    android:id="@+id/extra_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=". . ."
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        >
        <Button
            android:id="@+id/btn_add_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="Add Task"
            android:textStyle="bold"
            android:enabled="false"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>